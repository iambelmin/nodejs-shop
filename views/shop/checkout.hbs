<div class="container checkout-cont">
    <div class='row'>
        <div class='col-md-4'></div>
        <div class='col-md-4'>
          <form action="/checkout" id="checkout-form" method="post" >
            <div id="charge-error" class="alert alert-danger {{#if noError}}hidden{{/if}}">
                {{errMsg}}
            </div>
                 <div class='form-row'>
            <div class='col-xs-12 form-group required'>
                <label class='control-label' data-localize="buy.name">Name</label>
                <input class='form-control' type='text'  id="name" name="name" required>
              </div>
            </div>
            <div class='form-row'>
              <div class='col-xs-12 form-group required'>
                <label class='control-label' data-localize="buy.address">Address</label>
                <input class='form-control' id="address" required name="address">
              </div>
            </div>
            <div class='form-row'>
              <div class='col-xs-12 form-group required'>
                <label class='control-label' data-localize="buy.mail">E-mail</label>
                <input class='form-control' type='email'  id="email" name="email" required>
              </div>
            </div>
              <div class='form-row'>
              <div class='col-xs-12 form-group required'>
                <label class='control-label' data-localize="buy.number">Phone number</label>
                <input class='form-control' id="phone" required name="phone">
              </div>
            </div>
            <div class='form-row'>
              <div class='col-xs-12 form-group required'>
                <label class='control-label' data-localize="buy.nameoncard">Name on card</label>
                <input class='form-control' size='4' type='text' id="card-name" required>
              </div>
            </div>
            <div class='form-row'>
              <div class='col-xs-12 form-group card required'>
                <label class='control-label' data-localize="buy.cardno">Card number</label>
                <input autocomplete='off' class='form-control card-number' size='20' id="card-number" type='text' required>
              </div>
            </div>
            <div class='form-row'>
              <div class='col-xs-4 form-group cvc required'>
                <label class='control-label' data-localize="buy.cvc">CVC</label>
                <input autocomplete='off' class='form-control card-cvc' placeholder='ex. 311' size='4' type='text'  id="card-cvc"  required>
              </div>
              <div class='col-xs-4 form-group expiration required'>
                <label class='control-label' data-localize="buy.expiration">Expiration</label>
                <input class='form-control card-expiry-month' placeholder='MM' size='2' type='text' id="card-expiry-month" required>
              </div>
              <div class='col-xs-4 form-group expiration required'>
                <label class='control-label'> </label>
                <input class='form-control card-expiry-year' placeholder='YYYY' size='4' type='text'  id="card-expiry-year" required>
              </div>
            </div>
            <div class='form-row'>
              <div class='col-md-12'>
                <div class='form-control total btn btn-info'>
                  <span data-localize="buy.total">Total</span>:
                  <span class='amount'>{{totalPrice}}€</span>
                </div>
              </div>
            </div>
            <div class='form-row'>
              <div class='col-md-12 form-group'>
                <button class='form-control btn btn-primary submit-button' type='submit' data-localize="buy.checkout">Pay »</button>
              </div>
            </div>
          </form>
        </div>
        <div class='col-md-4'></div>
    </div>
</div>
<script src='https://js.stripe.com/v2/' type='text/javascript'></script>
<script src="/javascripts/checkout.js"></script>