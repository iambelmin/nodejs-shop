<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6 loginbox">
            <h1>LOGIN FORM</h1>
            <form action="/admin/login" method="POST">
            <div class="form-group">
                <label for="userInput">Enter your username</label>
                <input type="text" class="form-control" id="userInput" name="username" placeholder="Username" required>
            </div>
            <div class="form-group">
                <label for="passwordInput">Enter your password</label>
                <input type="password" class="form-control" id="passwordInput" name="password" placeholder="Password" required>
            </div>
                <button type="submit" class="btn btn-default">Submit</button>
            </form>

        </div>
        <div class="col-md-3"></div>
    </div>

</div>